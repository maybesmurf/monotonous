    "nexus-shield": "^2.0.0",
    "nodemailer": "^6.4.14",
    "pino": "^6.11.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-use": "^15.3.4",
    "zustand": "^3.3.2"
