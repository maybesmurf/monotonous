{
  "name": "monotonous",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "UNLICENSED",
  "scripts": {
    "prepare": "ultra -r --concurrency 10 --no-pretty prepare",
    "clean": "ultra -r --concurrency 10 --no-pretty clean && rm -rf node_modules",
    "dev": "yarn gql:dev & yarn ultra -r --no-pretty --concurrency 10 dev",
    "start": "ultra -r --no-pretty --concurrency 10 start",
    "build": "ultra -r --no-pretty --concurrency 10 build",
    "test": "NODE_ENV=test ultra -r --no-pretty--concurrency 10 test",
    "api": "yarn workspace api",
    "web": "yarn workspace web",
    "types": "yarn workspace @monotonous/types",
    "conf": "yarn workspace @monotonous/conf",
    "email": "yarn workspace @monotonous/email",
    "sdk-server": "yarn workspace @monotonous/sdk-server",
    "gql:dev": "graphql-codegen --config codegen.yml --watch",
    "gql:build": "graphql-codegen --config codegen.yml"
  },
  "dependencies": {
    "@apollo/client": "3.4.0-beta.22",
